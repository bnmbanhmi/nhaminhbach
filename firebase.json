{
  "functions": [
    {
      "source": "packages/functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "runtime": "python311"
    }
  ],
  "hosting": {
    "public": "packages/web/dist",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      ".github/**",
      "packages/**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}